							"mode": "raw",
							"raw": "{\n  \"name\": \"Newsletter Bienvenida\",\n  \"description\": \"Plantilla de bienvenida para nuevos suscriptores\",\n  \"subject\": \"¡Bienvenido {{nombre}} a {{empresa}}!\",\n  \"htmlContent\": \"<html><body><h1>¡Hola {{nombre}}!</h1><p>Gracias por unirte a <strong>{{empresa}}</strong>.</p><p>Tu email es: {{email}}</p><p>Fecha de registro: {{fecha_registro}}</p><a href='{{enlace_confirmacion}}'>Confirmar suscripción</a></body></html>\",\n  \"textContent\": \"¡Hola {{nombre}}! Gracias por unirte a {{empresa}}. Tu email: {{email}}. Confirma en: {{enlace_confirmacion}}\",\n  \"userId\": {{user_id}},\n  \"type\": \"EMAIL\",\n  \"status\": \"DRAFT\",\n  \"variables\": {\n    \"theme\": \"welcome\",\n    \"category\": \"onboarding\"\n  }\n}"
						},
