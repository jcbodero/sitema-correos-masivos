{
	"info": {
		"name": "Campaign Service API - Correos Masivos",
		"description": "API collection for Campaign Service through API Gateway",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "1",
			"type": "string"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/campaigns/health",
					"host": ["{{base_url}}"],
					"path": ["api", "campaigns", "health"]
				}
			}
		},
		{
			"name": "Campaigns",
			"item": [
				{
					"name": "Create Campaign",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Newsletter Enero 2024\",\n  \"subject\": \"¡Novedades increíbles este mes!\",\n  \"description\": \"Campaña mensual con las últimas novedades y ofertas\",\n  \"templateId\": 1,\n  \"userId\": {{user_id}},\n  \"sendType\": \"IMMEDIATE\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/campaigns",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns"]
						}
					}
				},
				{
					"name": "Get Campaign by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns/1",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns", "1"]
						}
					}
				},
				{
					"name": "Get All Campaigns",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns?userId={{user_id}}&page=0&size=20&sortBy=createdAt&sortDir=desc",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns"],
							"query": [
								{
									"key": "userId",
									"value": "{{user_id}}"
								},
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "20"
								},
								{
									"key": "sortBy",
									"value": "createdAt"
								},
								{
									"key": "sortDir",
									"value": "desc"
								}
							]
						}
					}
				},
				{
					"name": "Search Campaigns",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns?userId={{user_id}}&search=newsletter&page=0&size=20",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns"],
							"query": [
								{
									"key": "userId",
									"value": "{{user_id}}"
								},
								{
									"key": "search",
									"value": "newsletter"
								},
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "20"
								}
							]
						}
					}
				},
				{
					"name": "Get Campaigns by Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns?userId={{user_id}}&status=DRAFT&page=0&size=20",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns"],
							"query": [
								{
									"key": "userId",
									"value": "{{user_id}}"
								},
								{
									"key": "status",
									"value": "DRAFT"
								},
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "20"
								}
							]
						}
					}
				},
				{
					"name": "Update Campaign",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Newsletter Enero 2024 - Actualizado\",\n  \"subject\": \"¡Ofertas especiales solo por hoy!\",\n  \"description\": \"Campaña actualizada con ofertas de último momento\",\n  \"templateId\": 2,\n  \"userId\": {{user_id}},\n  \"sendType\": \"SCHEDULED\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/campaigns/1",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns", "1"]
						}
					}
				},
				{
					"name": "Delete Campaign",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns/1",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns", "1"]
						}
					}
				}
			]
		},
		{
