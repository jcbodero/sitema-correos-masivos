							"path": ["api", "campaigns", "1", "targets"]
						}
					}
				},
				{
					"name": "Remove Target List",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/campaigns/1/targets/1",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns", "1", "targets", "1"]
						}
					}
				}
			]
		},
		{
			"name": "Campaign Operations",
			"item": [
				{
					"name": "Duplicate Campaign",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Newsletter Febrero 2024 - Copia\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/campaigns/1/duplicate",
