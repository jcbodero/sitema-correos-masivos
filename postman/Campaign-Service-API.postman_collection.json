						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"targetType\": \"LIST\",\n  \"targetId\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/campaigns/1/targets",
							"host": ["{{base_url}}"],
							"path": ["api", "campaigns", "1", "targets"]
						}
					}
				},
				{
					"name": "Add Target Segment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
